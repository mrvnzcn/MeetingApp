@model List<UserInfo>
@{
    ViewBag.Title ="Toplantı Katılım Listesi";
}
<main>
    <h1 class="h4">Toplantı Katılım Listesi</h1>
    <table class="table table-bordered">
        <thead>
            <tr class="h5">
                <td>Ad Soyad</td>
                <td>Katılım Durumu</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @{ int i=0; }

            @foreach (var user in Model) {
                var durum = user.WillAttend == true ? "Evet" : (user.WillAttend == false ? "Hayır" : "Belirtilmemiş");

                var className = user.WillAttend == true ? "table-success" : (user.WillAttend == false ? "table-danger" : "table-warning");

                if(user.WillAttend == true){
                    i++;
                }

                <tr class="@className">
                    <td>@user.Name</td>
                    <td>@durum</td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="#">Detay</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="card">
        <div class="card-body">
            <span>Katılımcı Sayısı: @i</span>
        </div>
    </div>
</main>
